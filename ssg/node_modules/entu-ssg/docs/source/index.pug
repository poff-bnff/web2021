doctype html
html(lang='en')
    head
        title= 'Entu SSG'

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        link(href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&subset=latin-ext,cyrillic-ext', rel='stylesheet', type='text/css')
        link(href='https://cdn.jsdelivr.net/gh/twbs/bootstrap@3/dist/css/bootstrap.min.css', rel='stylesheet', type='text/css')
        link(href='https://cdn.jsdelivr.net/gh/afeld/bootstrap-toc@v0/dist/bootstrap-toc.min.css', rel='stylesheet', type='text/css')
        link(href='https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@9/build/styles/monokai-sublime.min.css', rel='stylesheet', type='text/css')

    body(data-spy='scroll', data-target='#toc')
        .container-fluid
            .row
                .hidden-xs.col-sm-2
                    nav#toc(data-spy='affix', data-toggle='toc')
                .col-xs-12.col-sm-8
                    include:markdown-it ../../README.md

        script(src='https://cdn.jsdelivr.net/gh/jquery/jquery@2/dist/jquery.min.js')
        script(src='https://cdn.jsdelivr.net/gh/twbs/bootstrap@3/dist/js/bootstrap.min.js')
        script(src='https://cdn.jsdelivr.net/gh/afeld/bootstrap-toc@v0/dist/bootstrap-toc.min.js')
        script(src='https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@9/build/highlight.min.js')
        script(src='https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@9/build/languages/yaml.min.js')
        script.
            hljs.initHighlightingOnLoad()

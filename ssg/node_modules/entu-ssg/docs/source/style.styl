body
    padding-top 30px
    padding-bottom 30px
    font-family 'Helvetica Neue', Roboto, sans-serif
    font-size 16px
    font-weight 300
    line-height 22px
    color #182530

h1
    margin-top 120px
    margin-bottom 110px
    font-size 48px
    font-weight 100
    text-align center

h2
    margin-top 200px
    margin-bottom 30px
    padding-top 40px
    font-size 32px
    font-weight 100
    text-align center

h3
    margin-top 120px
    margin-bottom 10px
    padding-top 40px
    padding-bottom 5px
    color #23241f
    font-weight 500
    border-bottom 1px solid #E8E8E8

h4
    margin-top 0
    margin-bottom 10px
    padding-top 40px
    color #23241f
    font-weight 500

pre
    margin-top 10px
    padding 0
    border none
    border-radius 0
    font-size 12px
    line-height 16px

    code
        border-radius 5px

.hljs
  padding 1em

img
    margin 10px
    &:first-child
        margin-left 0px

    &[src$='screenshot.png']
        display block
        margin 30px auto 0px auto
        width 100%
        max-width 900px
        border 1px solid #B9B9B9
        border-radius 6px

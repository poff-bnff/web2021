- var maxAmountToShow = 6

- var counter = 0

if self.data.sixFilms && self.data.sixFilms.cassettes && self.data.sixFilms.cassettes.length > 0
    if self.data.sixFilms.title
        .section_headline.dark_semi.thin_300= self.data.sixFilms.title
    section.kuuekas
        //- if self.data.sixFilms.title
        //-     h1.dark_1= self.data.sixFilms.title 2

        each cassette in self.data.sixFilms.cassettes
            if counter >= maxAmountToShow
                - break
            - counter++

            .kuueka_item
                a(href= `/${lang_path}film/${cassette.slug}`)
                    .container_frame_poster
                        - var img = ''

                        if cassette.cassettePostersCassette && cassette.cassettePostersCassette[0] && cassette.films.length > 1
                            - img = cassette.cassettePostersCassette[0]
                        else if cassette.cassettePostersFilms && cassette.cassettePostersFilms[0] && cassette.films.length === 1
                            - img = cassette.cassettePostersFilms[0]
                        else
                            - img = '/assets/img/static/placeholder_hd_1.jpg'

                        img.container_contents_poster(src= img).trio_image
                    .kuueka_body
                        if cassette.title
                            h3.article_title_locale= cassette.title

                if (!publishUntil || (publishUntil && (publishUntil > currentTime)))

                    - var splitSelfPath = self.path.split("/")[self.path.split("/").length-1]

                    if self.title
                        +tabname(self.title)

                    section.grid_article
                        section.about_hero_head

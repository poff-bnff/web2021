//- Head ja body tagid ainult arendusfaasis kasutuseks (RU teksti korrektseks kuvamiseks),
//- enne kasutuselevõttu eemaldada, sh meta tag head'i sees
head
    meta(charset='utf-8')

//- Head ja body tagid ainult arendusfaasis kasutuseks (RU teksti korrektseks kuvamiseks),
//- enne kasutuselevõttu eemaldada
body
    //- - var articleMenuItemDomain = 'kumu_article'
    - var lang_path = self.locale === self.defaultLocale ? '' : `${self.locale}/`

    //- Level 1
    each L1MenuItem in self.data.menu
        li.megamenu_item
            if L1MenuItem.link
                a(href= `${L1MenuItem.link}`)= L1MenuItem.name
            else
                a= L1MenuItem.name

            //- Level 2
            if L1MenuItem.L2MenuItems.length
                button.toggle_dropdown
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none">
                        <path d="M6 9.5L12 15.5L18 9.5" stroke="#666666" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                ul
                    each L2MenuItem in L1MenuItem.L2MenuItems
                        li.megamenu_el
                            if L2MenuItem.link
                                a(href= `${L2MenuItem.link}`)= L2MenuItem.name
                            else
                                a= L2MenuItem.name

                            //- Level 3
                            if L2MenuItem.L3MenuItems.length
                                ul
                                    each L3MenuItem in L2MenuItem.L3MenuItems
                                        li.megamenu_sub_el
                                            if L3MenuItem.link
                                                a(href= `${L3MenuItem.link}`)= L3MenuItem.name
                                            else
                                                a= L3MenuItem.name

    li.megamenu_item.user_menu
        a.user_menu
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 22 22" fill="none">
                <path d="M18.3332 19.25V17.4167C18.3332 16.4442 17.9469 15.5116 17.2592 14.8239C16.5716 14.1363 15.639 13.75 14.6665 13.75H7.33317C6.36071 13.75 5.42808 14.1363 4.74045 14.8239C4.05281 15.5116 3.6665 16.4442 3.6665 17.4167V19.25" stroke="#0E1417" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M11.0002 10.0833C13.0252 10.0833 14.6668 8.44171 14.6668 6.41667C14.6668 4.39162 13.0252 2.75 11.0002 2.75C8.97512 2.75 7.3335 4.39162 7.3335 6.41667C7.3335 8.44171 8.97512 10.0833 11.0002 10.0833Z" stroke="#0E1417" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        button.toggle_dropdown
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none">
                <path d="M6 9.5L12 15.5L18 9.5" stroke="#666666" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        ul
            li#logIn.megamenu_el(style={cursor: 'pointer', display: 'none'})
                a(onclick = 'saveUrl()' href=`/${lang_path}login`)= self.label.menu.mainLogin
            li#logInName.megamenu_el(style={display: 'none'})
                a#tervitus= self.label.menu.mainGreeting
            li#myCalendar.megamenu_el(style={cursor: 'pointer'})
                a(href=`/${lang_path}mycalendar`) My calendar
            //- li#userProfile(style={cursor: 'pointer', display: 'none'})
            //-     a(onclick = 'saveUrl()', href=`/${lang_path}userprofile`)= self.label.menu.mainProfile
            li#logOut.megamenu_el(style={cursor: 'pointer', display: 'none'} )
                a(onclick='logOut()')= self.label.menu.mainLogout

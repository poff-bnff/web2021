    .switch
        display inline
        input[type="checkbox"]
            display none;

        input[type="checkbox"]:checked ~ .slider
            background #12827E
            border none

        input[type="checkbox"]:checked ~ .slider .round
            background #fff
            left 18px;
            transform rotate(360deg);

        .slider,
        .round
            border-radius 9999px;

        .slider
            display inline-block
            height 29px;
            width 44px;
            background #fff
            position relative;
            top 6px
            margin-right 8px
            border: 1px solid #B0B3B5

        .round
            height 20px;
            width 20px;
            background #12827E
            position absolute;
            top 4px;
            left 4px;
            cursor pointer;

        .round::before
            height 11px;
            width 1px;
            top 4.5px;
            left 9.5px;

        .round::after
            height 1px;
            width 11px;
            top 9.5px;
            left 4.5px;

        .round::before,
        .round::after
            content '';
            position absolute;
            background #fff;
            border-radius 2px;
            transform rotate(45deg);

        input[type="checkbox"]:checked ~ .slider .round::before
            height 11px;
            top calc(55% - 6.5px);
            left calc(60% - 1px);
            background #636769


        input[type="checkbox"]:checked ~ .slider .round::after
            width 6px;
            top calc(95% - 7.5px);
            left calc(22.5% - 1.5px);
            background #636769


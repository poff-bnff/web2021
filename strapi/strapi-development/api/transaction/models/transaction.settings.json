{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "name": "transaction"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "dateTime": {
      "type": "datetime"
    },
    "person": {
      "model": "person"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Purchase",
        "Refund"
      ],
      "default": "Purchase"
    },
    "payment": {
      "type": "component",
      "repeatable": true,
      "component": "ticketing.payment"
    },
    "products": {
      "via": "transaction",
      "collection": "transactions-products"
    },
    "user": {
      "via": "transactions",
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}

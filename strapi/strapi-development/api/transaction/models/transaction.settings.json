{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "name": "transaction",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "dateTime": {
      "type": "datetime"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Purchase",
        "Refund"
      ],
      "default": "Purchase"
    },
    "payment": {
      "type": "component",
      "repeatable": false,
      "component": "ticketing.payment"
    },
    "user": {
      "via": "transactions",
      "plugin": "users-permissions",
      "model": "user"
    },
    "products": {
      "via": "transaction",
      "collection": "transaction-products"
    }
  }
}
